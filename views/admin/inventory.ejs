<%- include("../partials/admin/adminsidebar") %>

<!-- Bootstrap & SweetAlert CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">

<style>
  body {
    font-family: 'Nunito', sans-serif;
    background-color: #f4f6f9;
  }

  .card {
    border-radius: 12px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    background: white;
    overflow: hidden;
  }

  .card-header {
    background: linear-gradient(135deg, #007bff, #6610f2);
    color: white;
    padding: 15px 20px;
    font-size: 1.5rem;
    font-weight: bold;
    border-radius: 12px 12px 0 0;
    text-align: center;
  }

  .search-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
  }

  .search-form {
    width: 100%;
    max-width: 400px;
  }

  .search-input {
    border-radius: 50px;
    padding: 10px 15px;
    border: 1px solid #ccc;
    transition: all 0.3s ease-in-out;
  }

  .search-input:focus {
    box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.5);
    border-color: #007bff;
  }

  .search-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-clear {
    background: #dc3545;
    color: white;
    border-radius: 50px;
    padding: 8px 15px;
    transition: all 0.3s;
  }

  .btn-clear:hover {
    background: #c82333;
  }

  .table-responsive {
    overflow-x: auto;
  }

  .table {
    border-collapse: collapse;
    width: 100%;
    background: white;
  }

  .table th {
    background: #007bff;
    color: white;
    text-align: center;
    padding: 12px;
  }

  .table td {
    padding: 10px;
    text-align: center;
    vertical-align: middle;
  }

  .product-img {
    height: 70px;
    width: 70px;
    border-radius: 10px;
    transition: transform 0.3s ease;
  }

  .product-img:hover {
    transform: scale(1.1);
  }

  .quantity-container {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .quantity-input {
    width: 80px;
    padding: 5px;
    text-align: center;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border 0.3s ease-in-out;
  }

  .quantity-input:focus {
    border-color: #007bff;
  }

  .btn-update {
    background: #28a745;
    color: white;
    border-radius: 8px;
    padding: 5px 15px;
    transition: all 0.3s;
  }

  .btn-update:hover {
    background: #218838;
  }

  .error-message {
    color: red;
    font-size: 12px;
    margin-top: 2px;
    display: none;
  }

  /* Responsive Design */
  @media (max-width: 992px) {
    .search-container {
      flex-direction: column;
      align-items: center;
    }

    .search-actions {
      width: 100%;
      justify-content: center;
    }

    .search-form {
      width: 100%;
      max-width: 90%;
    }

    .table-responsive {
      overflow-x: auto;
    }

    .product-img {
      height: 50px;
      width: 50px;
    }
  }
</style>

<div class="main-content content-wrapper">
  <div class="card mt-4">
    <div class="card-header">Inventory Management</div>

    <div class="search-container">
      <form action="" method="get" class="search-form">
        <div class="input-group">
          <input
            type="text"
            id="searchInput"
            class="form-control search-input"
            placeholder="Search for products"
            name="search"
            value="<%= typeof searched !== 'undefined' ? searched : '' %>"
          />
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>

      <div class="search-actions">
        <a href="/admin/inventory" id="clearSearch" class="btn btn-clear d-none">
          <i class="fas fa-times me-1"></i> Clear
        </a>
      </div>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Product Image</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Quantity</th>
              <th>Update Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% product.forEach(product => { %>
            <tr>
              <td>
                <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="Product Image" class="product-img">
              </td>
              <td><%= product.productName %></td>
              <td><%= product.category.name %></td>
              <td class="current-quantity"><%= product.quantity %></td>
              <td>
                <div class="quantity-container">
                  <input type="number" name="quantity" min="0" step="1" value="<%= product.quantity %>" class="quantity-input" oninput="validateQuantity(this)">
                  <button type="button" class="btn btn-update" onclick="updateInventory(this, '<%= product._id %>')">
                    Update
                  </button>
                </div>
                <span class="error-message"></span>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  function validateQuantity(input) {
    const value = input.value;
    const errorElement = input.closest("td").querySelector(".error-message");

    if (!Number.isInteger(Number(value)) || value < 0 || value === "") {
      errorElement.textContent = "Please enter a valid whole number!";
      errorElement.style.display = "block";
    } else {
      errorElement.textContent = "";
      errorElement.style.display = "none";
    }
  }

  function updateInventory(button, productId) {
    const input = button.previousElementSibling;
    const value = input.value;

    $.ajax({
      url: `/admin/inventory?id=${productId}`,
      type: "PATCH",
      contentType: "application/json",
      data: JSON.stringify({ quantity: value }),
      success: function (data) {
        Swal.fire("Success", `Quantity updated to ${value}`, "success").then(() => {
          location.reload();
        });
      },
      error: function () {
        Swal.fire("Error", "An error occurred. Try again.", "error");
      }
    });
  }
</script>
