<%- include("../../views/partials/admin/adminheader") %>
<%- include("../../views/partials/admin/adminsidebar") %>

<link rel="stylesheet" href="/css/admin.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style>
    .table {
        align-items: center;
        width: 70%;
        margin-left: 20%;
    }
    .img-xs {
        height: 2rem;
        width: 3rem;
    }
    .badge {
        font-size: 0.875rem;
    }
    .material-icons.md-delete {
        color: red;
        cursor: pointer;
    }
    .btn-primary {
        margin-top: 1rem;
    }
</style>
<header>
<div class="content-header row">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="content-title card-title">Banners</h2>
    </div>
</div>
</header>
<div class="main right mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Active</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <%if(locals.data){%>
                <%for(let i=0;i<data.length;i++){%>
            <tr>
                <td>
                    <img src="/uploads/re-image/<%=data[i].image%>" class="img-xs" alt="Item">
                </td>
                <td> <%=data[i].title%></td>
                <td><%=data[i].description%></td>
                <td>
                    <%if(data[i].startDate<Date.now() && data[i].endDate>Date.now()){%>
                    <p class="badge rounded-pill bg-success">Active</p>
                    <%}else{%>
                    <p class="badge rounded-pill bg-danger">No Active</p>
                    <%}%>
                </td>
                <td class="action" data-title="Remove">
                    <a href="/admin/deleteBanner?id=<%=data[i]._id%>">
                        <i class="material-icons md-delete">delete</i>
                    </a>
                </td>
            </tr>
            <%}%>
            <%}else{%>
                No Banner Found
                <%}%>
        </tbody>
    </table>
</div>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <a href="/admin/addBanner">
                <button class="btn btn-primary" type="button">Add Banner</button>
            </a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
