<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-v8QQ0YQ3H4K6Ic3PJkym91KoeNT5S3PnDKvqnwqFD1oiqIl653crGZplPdU5KKtHjO0QKcQ2aUlQZYjHczkmGw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://kit.fontawesome.com/c4265f3711.js" crossorigin="anonymous"></script>

<style>
  body {
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f4f4f4;
  }

  .sidebar {
    /* width: 360px; */
    background-color: #f8f8f8;
    color: #080808;
    /* padding: 30px; */
    height: 100vh;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    /* margin: 10px; */
    /* position: fixed; */
  }

  .sidebar h2 {
    font-size: 24px;
    margin-bottom: 30px;
    border-bottom: 2px solid #ffffff33;
    padding-bottom: 10px;
    text-align: center;
  }

  .sidebar-profileImage {
    text-align: center;
    margin-bottom: 25px;
  }

  .profile-img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid #0a0a0a88;
    margin-bottom: 10px;
    transition: transform 0.3s;
  }

  .profile-img:hover {
    transform: scale(1.05);
  }

  .inputFile {
    color: #080000aa;
    margin-top: 10px;
    font-size: 13px;
  }

  .upload-btn {
    margin-top: 10px;
    background-color: #4CAF50;
    color: rgb(7, 7, 7);
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .upload-btn:hover {
    background-color: #45a049;
  }

  .sidebar a {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #0a0a0a;
    text-decoration: none;
    margin: 12px 0;
    padding: 10px 12px;
    border-radius: 8px;
    transition: background 0.3s, color 0.3s;
  }

  .sidebar a:hover {
    background-color: #2f2f48;
    color: #ffffff;
  }

  .sidebar svg {
    fill: currentColor;
  }
</style>
</head>

<body>
<div class="sidebar ml-1">
  <h2>My Account</h2>

  <div class="sidebar-profileImage">
    <img src="/uploads/re-image/<%= user.profileImage ? user.profileImage : 'images/single_2_thumb.jpg' %>" alt="Profile Image" class="profile-img">

    <form action="/uploadProfile" method="POST" enctype="multipart/form-data">
      <input type="file" class="inputFile" name="profileImage" required>
      <br>
      <button type="submit" class="upload-btn"><i class="fa-solid fa-upload"></i> Upload</button>
    </form>
  </div>

  <a href="/userProfile"><i class="fa-solid fa-user"></i> Account Details</a>
  <a href="/address"><i class="fa-solid fa-location-dot"></i> My Addresses</a>
  <a href="/orders"><i class="fa-solid fa-box"></i> My Orders</a>
  <a href="/wishlist"><i class="fa-solid fa-heart"></i> My Wishlist</a>
  <a href="/wallet"><i class="fa-solid fa-wallet"></i> My Wallet</a>
  <!-- <a href="/coupon"><i class="fa-solid fa-tags"></i> My Coupon</a> -->
  <a href="/logout"><i class="fa-solid fa-sign-out-alt"></i> Logout</a>
</div>